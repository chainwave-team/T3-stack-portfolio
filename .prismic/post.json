{
    "Main": {
        "title": {
            "type": "StructuredText",
            "config": {
                "single": "heading1",
                "label": "Title"
            }
        },
        "published_date": {
            "type": "Date",
            "config": {
                "label": "Published date",
                "placeholder": "Only for predate the post"
            }
        },
        "relations": {
            "type": "Group",
            "config": {
                "fields": {
                    "tech_tags": {
                        "type": "Link",
                        "config": {
                            "select": "document",
                            "customtypes": [
                                "tech_tags"
                            ],
                            "label": "Tech tags"
                        }
                    }
                },
                "label": "Relations"
            }
        },
        "thumbnail": {
            "type": "Image",
            "config": {
                "constraint": {},
                "thumbnails": [],
                "label": "Thumbnail"
            }
        }
    },
    "SEO": {
        "uid": {
            "type": "UID",
            "config": {
                "label": "Unique ID",
                "placeholder": "Type an SEO-friendly identifier..."
            }
        },
        "meta_title": {
            "type": "Text",
            "config": {
                "label": "Meta Title",
                "placeholder": "Meta title..."
            }
        },
        "meta_description": {
            "type": "Text",
            "config": {
                "label": "Meta Description",
                "placeholder": "Meta Description..."
            }
        },
        "canonical": {
            "type": "Link",
            "config": {
                "select": "document",
                "customtypes": [
                    "brewery",
                    "country",
                    "tech_tags"
                ],
                "label": "Canonical URL",
                "placeholder": "Select the category to use in the canonical URL"
            }
        }
    },
    "Body": {
        "body": {
            "type": "Slices",
            "fieldset": "Slice zone",
            "config": {
                "labels": {
                    "image_with_caption": [
                        {
                            "name": "blog",
                            "display": "Blog"
                        },
                        {
                            "name": "container",
                            "display": "Container"
                        },
                        {
                            "name": "full",
                            "display": "Full width"
                        }
                    ]
                },
                "choices": {
                    "text": {
                        "type": "Slice",
                        "fieldset": "Text",
                        "description": "A rich text section",
                        "icon": "text_fields",
                        "non-repeat": {
                            "text": {
                                "type": "StructuredText",
                                "config": {
                                    "multi": "paragraph, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, embed, list-item, o-list-item, o-list-item",
                                    "allowTargetBlank": true,
                                    "label": "Text",
                                    "placeholder": "Post text..."
                                }
                            }
                        },
                        "repeat": {}
                    },
                    "quote": {
                        "type": "Slice",
                        "fieldset": "Quote",
                        "description": "A quote section",
                        "icon": "format_quote",
                        "non-repeat": {
                            "quote": {
                                "type": "StructuredText",
                                "config": {
                                    "single": "paragraph",
                                    "label": "Quote",
                                    "placeholder": "Post Quote..."
                                }
                            },
                            "source_name": {
                                "type": "Text",
                                "config": {
                                    "label": "Source Name"
                                }
                            },
                            "source_link": {
                                "type": "Link",
                                "config": {
                                    "allowTargetBlank": true,
                                    "label": "Source Link"
                                }
                            }
                        },
                        "repeat": {}
                    },
                    "image_with_caption": {
                        "type": "Slice",
                        "fieldset": "Image with Caption",
                        "description": "An image with an optional caption",
                        "icon": "image",
                        "non-repeat": {
                            "image_size": {
                                "type": "Select",
                                "config": {
                                    "options": [
                                        "blog",
                                        "container",
                                        "full"
                                    ],
                                    "default_value": "blog",
                                    "label": "Image size"
                                }
                            },
                            "image": {
                                "type": "Image",
                                "config": {
                                    "constraint": {
                                        "width": 1200
                                    },
                                    "thumbnails": [],
                                    "label": "Image"
                                }
                            },
                            "caption": {
                                "type": "Text",
                                "config": {
                                    "label": "Caption",
                                    "placeholder": "Image Caption...."
                                }
                            }
                        },
                        "repeat": {}
                    },
                    "code": {
                        "type": "Slice",
                        "fieldset": "Code",
                        "description": "A block Code section",
                        "icon": "code",
                        "display": "list",
                        "non-repeat": {
                            "code": {
                                "type": "StructuredText",
                                "config": {
                                    "multi": "preformatted",
                                    "allowTargetBlank": true,
                                    "label": "Code",
                                    "labels": [
                                        "javascript",
                                        "jsx",
                                        "typescript",
                                        "tsx",
                                        "bash",
                                        "yaml",
                                        "json",
                                        "css",
                                        "scss",
                                        "markdown",
                                        "graphql",
                                        "sql",
                                        "php"
                                    ]
                                }
                            }
                        },
                        "repeat": {}
                    }
                }
            }
        }
    }
}