{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "dom",
            "esnext"
        ],
        // "moduleResolution": "node",       
        "allowJs": true,
        "checkJs": false,
        "jsx": "preserve",
        "sourceMap": true,
        "removeComments": true,
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": false
        // "noUnusedParameters": true,
        // "preserveConstEnums": true
    },
    "exclude": [
        "node_modules",
        "public",
        ".cache"
    ]
}